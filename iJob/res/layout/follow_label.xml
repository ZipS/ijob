<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/followedCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关注城市"
            android:textSize="15sp" />

    </LinearLayout>

    <GridView
        android:id="@+id/followedCityGridView"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:numColumns="3" >
    </GridView>
	<TextView
            android:id="@+id/addFollowCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD+"
            android:textSize="15sp" />
    <TextView
        android:id="@+id/followedPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:text="关注职位"
        android:textSize="15sp" />

    <GridView
        android:id="@+id/followedPostGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3" >
    </GridView>
	<TextView
            android:id="@+id/addFollowPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD+"
            android:textSize="15sp" />
</LinearLayout>